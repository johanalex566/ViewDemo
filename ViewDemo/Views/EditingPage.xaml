<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewDemo.Views.EditingPage"
             Title="EditingPage"
             Shell.NavBarIsVisible="false">
    <VerticalStackLayout Margin="8">
        <Frame HasShadow="True">
            <VerticalStackLayout>
                <Label Text="Plain text"/>
                <Entry Placeholder="Enter some text here"/>
            </VerticalStackLayout>
        </Frame>
        <BoxView 
            Margin="40,10,40,10"
            BackgroundColor="LightGray"
            HeightRequest="1"/>
        <Frame HasShadow="True">
            <VerticalStackLayout>
                <Label Text="Passowrd text"/>
                <Entry IsPassword="True" Placeholder="Enter new password"/>
            </VerticalStackLayout>
        </Frame>
        <BoxView 
            Margin="40,10,40,10"
            BackgroundColor="LightGray"
            HeightRequest="1"/>
        <Frame HasShadow="True">
            <VerticalStackLayout>
                <Label Text="Numeric entry"/>
                <Entry Keyboard="Numeric" Placeholder="Enter numeric value"/>
            </VerticalStackLayout>
        </Frame>
        <BoxView 
            Margin="40,10,40,10"
            BackgroundColor="LightGray"
            HeightRequest="1"/>
        <Frame HasShadow="True">
            <VerticalStackLayout>
                <Label Text="Editor"/>
                <Editor HeightRequest="100" Placeholder="Enter some text here"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>