<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ViewDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ViewDemo"
    xmlns:views="clr-namespace:ViewDemo.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ViewDemo">

    <TabBar>
        <ShellContent Title="Presentation" ContentTemplate="{DataTemplate  views:PresentationPage}"/>
        <ShellContent Title="Commands" ContentTemplate="{DataTemplate  views:CommandPage}"/>
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate  views:SettingPage}"/>
        <ShellContent Title="Editing" ContentTemplate="{DataTemplate  views:EditingPage}"/>
        <ShellContent Title="Activity" ContentTemplate="{DataTemplate views:ActivityPage}"/>
    </TabBar>

</Shell>
